<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Creacion: '}) %>
<body style="background-image: url(/images/EscamasNegras.jpeg);">
	<!-- Header -->
	<div class="fondo-product">
	<%- include('partials/header') %>
	<!-- /Header -->




	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de Creación de Productos</h2>
			</div>
		</div>
		<div class="col-12">
			<form method="POST" action="create"> 

				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del Producto:</label>
						<input class="form-input" type="text" id="name" name="name" value="<%= locals.old && locals.name %>" >
						<% if (locals.errors && errors.name)  { %>
							<p class="feedback"><%= errors.name %></p>
						<% } %>	
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del Producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="in-sale">En oferta</option>
							<option value="visited">Últimos agregados</option>
						</select>
					</div>
					 
					
					<div class="col-12">
						<label for="description" class="form-label">Descripción:</label>
						<textarea name="description" id="description" class="form-input"></textarea>
					</div>
					
					<div class="col-12">   <!--  FALTA ESTA PARTE CON MULTER -->
					
						<label for="image" class="form-label">Imagen:</label>
						<div class="fileUpload btn btn-primary">
							<label class="upload" for="image" class="form-titles ">Seleccioná una Imagen</label>
							<input type="file" name="image" id="image" accept=".png, .jpg" required>
						</div>
						
					</div>
					
					<div class="col-12" > 
						<button type="submit" class="buy-now-button" >Guardar</button>
					</div>
				
				</div>
			</form>
		</div>


	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</div>
</body>	
</html>

